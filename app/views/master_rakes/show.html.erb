<% title @rake.name + " Bookmarks" %>
<% meta title: @rake.name + " Bookmarks",
        description: @rake.description,
        keywords: Category.find(@rake.category_id).leaflet_types.pluck(:leaflet_type_desc) << "Recommendations" << "Bookmarks" << @rake.name %>
<div class="container-fluid">
  <%= render 'master_rakes/master_rakes_menu' %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Productive Bookmarking</h1>
      <h5>
        <small>
          <% if user_signed_in? %>
            <%= link_to "MY BOOKMARKING RAKES", myrakes_path, class: "nav-link" %>
            &nbsp;|&nbsp;
          <% else %>
            <%= link_to "SIGN IN", new_user_session_path, class: "nav-link" %>
            &nbsp;|&nbsp;
          <% end %>
          <%= link_to "ALL BOOKMARKING RAKES", master_rakes_path, class: "nav-link" %>
        </small>
      </h5>
      <% if !flash.empty? %>
        <%= render 'shared/flash_message' %>
      <% end %>
      <div class="panel-group" id="accordion-main">
        <div class="panel panel-default">
          <div class="panel-heading panel-new-master-rakes">
            <h1 class="panel-title">
              <% if user_signed_in? %>
                <% if @rake.myrakes.pluck(:user_id).include? current_user.id %>
                  <i class="fa fa-star white"></i>
                <% end %>
              <% end %>
              <%= @rake.name %> Bookmarks
              <%= social_share_button_tag(@rake.name + " Bookmarks", 
                                          image: @rake.image_url) %>
            </h1>
          </div>
          <div class="panel-collapse collapse in" id="collapse-feed">
            <div class="panel-body">
              <%= render 'masterrake' %>
            </div>
          </div>
        </div>

      </div>
      
      <div class="panel-group" id="accordion-show">
        <%#= render 'feed' %>
        <%#= render 'channels' %>
        <%#= render 'recommendations' %>
      </div>
    </div>
  </div>
</div>
<% if user_signed_in? %>
  <%= render 'master_rakes/edit_category_modal' %>
  <% if !@custom_rake.nil? %>
    <%= render 'master_rakes/leaflet_save_modal' %>
    <%= render 'master_rakes/leaflet_create_modal' %>
  <% end %>
  <%= render 'master_rakes/new_rake_modal' %>
  <%= render 'master_rakes/add_rss_modal' %>
  <%= render 'master_rakes/add_subreddit_modal' %>
<% end %>