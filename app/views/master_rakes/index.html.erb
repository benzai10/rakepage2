<%= render 'master_rakes/master_rakes_menu' %>
<div class="row">
  <div class="col-md-3">
    <h5><small>MASTER RAKES | CATEGORIES</small></h5>
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h5 class="panel-title">
            <%= link_to "Front Page", master_rakes_path %>
          </h5>
        </div>
        <% if @category.nil? %>
        <div class="panel-collapse collapse in">
        <% else %>
          <div class="panel-collapse collapse">
        <% end %>
          <div class="panel-body">
          </div>
        </div>
      </div>
      <% @categories.each do |c| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h5 class="panel-title">
              <%= link_to c.desc, master_rakes_path(category_id: c.id) %>
              <% href_id = "#category_" + c.id.to_s %>
              <% if !@category.nil? %>
                <% if c.id == params[:category_id].to_i %>
                  <span class="pull-right">
                    <%= link_to '<i class="fa fa-info"></i>'.html_safe, href_id, 
                                :data => { :toggle => "collapse" },
                                id: "feed-chevron" %>
                  </span>
                <% end %>
              <% end %>
            </h5>
          </div>
          <% if !@category.nil? %>
            <% if c.id == params[:category_id].to_i %>
              <div id="category_<%= "#{c.id.to_s}" %>" class="panel-collapse collapse in">
            <% else %>
              <div id="category_<%= "#{c.id.to_s}" %>" class="panel-collapse collapse">
            <% end %>
          <% else %>
            <div id="category_<%= "#{c.id.to_s}" %>" class="panel-collapse collapse">
          <% end %>
            <div class="panel-body">
              <% if !@category.nil? %>
                <h5><small><%= c.comment %></small></h5>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-6">
    <% if !@category.nil? %>
      <h5><small><%= @category.desc.upcase %> | <%= link_to "ADD MASTER RAKE", new_master_rake_path, data: { toggle: "modal", target: "#newMasterRakeModal", category: params[:category_id] }, class: "masterrake-create" %>
</small></h5>
    <% else %>
      <h5><small>FRONT PAGE</small></h5>
      <h1>Welcome to Rakepage!</h1>
      <p>
        Choose one of the categories on the left side and discover the existing Master Rakes. See what knowledge the Rakepage community has generated so far. Join the community and create your own customized rakes to experience a new way of how to consume web content. Have fun!
      </p>
    <% end %>
    <% if !@category.nil? %>
      <div class="row">
        <% @master_rakes.where("category_id = ? AND (name <> 'Facebook Import' AND name <> 'Twitter Import')", @category.id).each do |m| %>
          <div class="col-md-6">
            <div class="thumbnail">
              <div class="caption">
                <%= link_to m.name, master_rake_path(m) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<%= render 'master_rakes/new_modal' %>
