<% if !@category.nil? %>
  <% title @category.desc + " Recommendations" %>
<% else %>
  <% title "Shared Recommendation Collections" %>
<% end %>
<div class="container-fluid">
  <%= render 'master_rakes/master_rakes_menu' %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Shared Recommendation Collections</h1>
      <h5>
        <small>
          <% if user_signed_in? %>
           <%= link_to "MY RECOMMENDATION RAKES", myrakes_path, class: "nav-link" %>
          <% else %>
            <%= link_to "SIGN IN", new_user_session_path, class: "nav-link" %>
          <% end %>
        </small>
      </h5>
      <% if !flash.empty? %>
        <%= render 'shared/flash_message' %>
      <% end %>
      <div class="panel-group" id="accordion-main">
        <%= render 'overview' %>
      </div>
      <div class="panel-group" id="accordion-index">
        <%#= render 'new_master_rakes' %>
        <%= render 'new_recommendations' %>
        <%#= render 'all_master_rakes' %>
      </div>
    </div>
  </div>
</div>
<% if user_signed_in? %>
  <%= render 'new_modal' %>
  <%= render 'info_create_rake_modal' %>
  <%= render 'leaflet_save_modal2' %>
<% end %>

