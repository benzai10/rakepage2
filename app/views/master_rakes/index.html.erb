<div class="container-fluid">
  <%= render 'master_rakes/master_rakes_menu' %>
  <div class="row">
    <div class="col-md-3">
      <h5><small>MASTER RAKES | CATEGORIES</small></h5>
      <div class="panel-group" id="accordion">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h5 class="panel-title">
              <%= link_to "Front Page", master_rakes_path %>
              <% if user_signed_in? %>
                <span class="pull-right channel-title"><small>
                  <%= link_to '<i class="fa fa-arrow-right"></i> MY RAKES'.html_safe, rakes_path %>
                </small></span>
              <% end %>
            </h5>
          </div>
          <% if @category.nil? %>
          <div class="panel-collapse collapse in">
          <% else %>
            <div class="panel-collapse collapse">
          <% end %>
            <div class="panel-body">
            </div>
          </div>
        </div>
        <% @categories.each do |c| %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h5 class="panel-title">
                <%= link_to c.desc, master_rakes_path(category_id: c.id) %>
                <% href_id = "#category_" + c.id.to_s %>
                <% if !@category.nil? %>
                  <% if c.id == params[:category_id].to_i %>
                    <span class="pull-right">
                      <%= link_to '<i class="fa fa-info"></i>'.html_safe, href_id, 
                                  :data => { :toggle => "collapse" },
                                  id: "feed-chevron" %>
                    </span>
                  <% end %>
                <% end %>
              </h5>
            </div>
            <% if !@category.nil? %>
              <% if c.id == params[:category_id].to_i %>
                <div id="category_<%= "#{c.id.to_s}" %>" class="panel-collapse collapse in">
              <% else %>
                <div id="category_<%= "#{c.id.to_s}" %>" class="panel-collapse collapse">
              <% end %>
            <% else %>
              <div id="category_<%= "#{c.id.to_s}" %>" class="panel-collapse collapse">
            <% end %>
              <div class="panel-body">
                <% if !@category.nil? %>
                  <h5><small><%= c.comment %></small></h5>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <% if !@category.nil? %>
        <h5><small>
          <%= @category.desc.upcase %>
          <% if user_signed_in? %>
            &nbsp;|&nbsp;
            <%= link_to "ADD MASTER RAKE", new_master_rake_path, data: { toggle: "modal", target: "#newMasterRakeModal", category: params[:category_id], user: current_user.id }, class: "masterrake-create" %>
          <% else %>
            &nbsp;|&nbsp;
            <%= link_to "ADD MASTER RAKE", new_user_session_path %>
          <% end %>
        </small></h5>
      <% else %>
        <h5><small>FRONT PAGE</small></h5>
        <%= render 'front_page' %>
      <% end %>
      <% if !@category.nil? %>
        <div class="row">
          <% if !flash.empty? %>
            <%= render 'shared/flash_message' %>
          <% end %>
          <% @master_rakes.where("category_id = ? AND (name <> 'Facebook Import' AND name <> 'Twitter Import')", @category.id).each do |m| %>
            <div class="col-md-6">
              <div class="thumbnail">
                <div class="caption">
                  <% if m.image_url.nil? || m.image_url.empty? %>
                    <%= link_to image_tag("no_image.png"), master_rake_path(m.id), class: "load-rake", value: m.id %>
                  <% else %>
                    <%= link_to image_tag(m.image_url), master_rake_path(m.id), class: "load-rake", value: m.id %>
                  <% end %>
                  <span class="rake-caption">
                    <%= link_to m.name, master_rake_path(m), class: "load-rake", value: m.id %>
                  </span>
                  <span id="load-rake-<%= "#{m.id.to_s}" %>"></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render 'master_rakes/new_modal' %>
  <% if user_signed_in? %>
    <% if History.where("user_id = ? AND history_code = ?", current_user.id, "no_tutorial").count == 0 %>
      <%= render 'tutorial_modal' %>
      <%= javascript_tag "$('#showTutorialModal').modal('show');", type: "text/javascript" %>
    <% end %>
  <% end %>
</div>