<div class="row">
  <br>
  <!-- Create new Master Rake (check if duplicated code in Myrakes view) -->
  <div class="col-md-6">
    <% if user_signed_in? %>
      <div class="thumbnail">
        <%= link_to new_master_rake_path, data: { 
                    toggle: "modal",
                    target: "#newMasterRakeModal",
                    category: "none",
                    user: current_user.id },
                    class: "masterrake-create" do %>
          <div class="media">
            <span class="pull-left">
              <%= image_tag("add_master_rake.png", size: "96x54") %>
            </span>
            <div class="media-body">
              <h5 class="media-heading">Add new Master Rake</h5>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="thumbnail">
        <%= link_to new_user_session_path do %>
          <div class="media">
            <span class="pull-left">
              <%= image_tag("add_master_rake.png", size: "96x54") %>
            </span>
            <div class="media-body">
              <h5 class="media-heading">Add new Master Rake</h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% @new_master_rakes.each do |m| %>
    <% master_leaflets = MasterHeapLeafletMap.where("master_heap_id IN (?)", m.master_heaps.pluck(:id)) %>
    <div class="col-md-6">
      <div class="thumbnail">
        <%= link_to master_rake_path(m.id, refresh: "no") do %>
          <div class="media load-rake" value="<%= m.id %>">
            <span class="pull-left">
              <% if m.image_url.nil? || m.image_url.empty? %>
                <%= image_tag("no_image.png", size: "96x54") %>
              <% else %>
                <%= image_tag(m.image_url, size: "96x54") %>
              <% end %>
            </span>
            <div class="media-body">
              <h5 class="media-heading">
                <% if user_signed_in? %>
                  <% if m.myrakes.pluck(:user_id).include? current_user.id %>
                    <i class="fa fa-star"></i>
                  <% end %>
                <% end %>
                <%= m.name %>
              </h5>
              <p>
                <%= pluralize(m.myrakes.count, "Raker") %>
                &nbsp;|&nbsp;
                <%= pluralize(master_leaflets.count,
                              "Rec") %>
              </p>
              <p>
                <% if user_signed_in? %>
                  <span class="new-rec-alert">
                    <% user_rake = m.myrakes.find_by_user_id(current_user.id) %>
                    <% if !user_rake.nil? %>
                      <% new_channels = m.channels.where("channel_type <> 3 AND channel_type <> 5 AND created_at > ?", current_user.last_sign_in_at ) %>
                      <% new_channels -= user_rake.channels %>
                      <% @new_count = new_channels.count %>
                      <%= pluralize(@new_count, "New Channel") unless @new_count == 0 %>
                      <% new_count = master_leaflets.where("created_at > ?", current_user.last_sign_in_at).count %>
                      <% if @new_count > 0 && new_count > 0 %>
                        &nbsp;|&nbsp;
                      <% end %>
                      <%= pluralize(new_count, "New Rec") unless new_count == 0 %>
                    <% end %>
                  </span>
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>