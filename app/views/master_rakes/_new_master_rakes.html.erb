<div class="row">
  <%= render 'search_field' %>
  <% @new_master_rakes.each do |m| %>
    <% master_leaflets = MasterHeapLeafletMap.where("master_heap_id IN (?)", m.master_heaps.pluck(:id)) %>
    <div class="col-md-12 col-lg-6">
      <div class="thumbnail">
        <%= link_to master_rake_path(m) do %>
          <div class="media load-rake" value="<%= m.id %>">
            <span class="pull-left">
              <% if m.image_url.nil? || m.image_url.empty? %>
                <%= image_tag("no_image.png", size: "96x54") %>
              <% else %>
                <%= image_tag(m.image_url, size: "96x54") %>
              <% end %>
            </span>
            <div class="media-body">
              <h5 class="media-heading">
                <% if user_signed_in? %>
                  <% if m.myrakes.pluck(:user_id).include? current_user.id %>
                    <i class="fa fa-star-o"></i>
                  <% end %>
                <% end %>
                <%= m.name %>
              </h5>
              <p class="rake-links">
                <% parent_master_rakes = m.parent_master_rakes %>
                <% children_master_rakes = m.children_master_rakes %>
                <% sibling_master_rakes = m.sibling_master_rakes %>
                <% children_master_rakes -= sibling_master_rakes %>
                <% sibling_master_rakes -= parent_master_rakes %>
                <% related_rakes = parent_master_rakes.count + sibling_master_rakes.count + children_master_rakes.count %>
                Related topics: <%= related_rakes.to_s %>
              <p>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if user_signed_in? && current_user.admin == true %>
    <div class="col-md-12 col-lg-6">
      <div class="thumbnail">
        <%= link_to new_master_rake_path, data: { 
                    toggle: "modal",
                    target: "#newMasterRakeModal",
                    category: "none",
                    user: current_user.id },
                    class: "masterrake-create" do %>
          <div class="media">
            <span class="pull-left">
              <%= image_tag("add_master_rake.png", size: "96x54") %>
            </span>
            <div class="media-body">
              <h5 class="media-heading">Add new Topic</h5>
              <p>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>