<!-- Nav tabs -->
<div class="row">
  <ul class="nav nav-tabs" role="tablist">
    <li class="rake-nav active"><a href="#feed" id="view-news" data-toggle="tab">NEWS</a></li>
    <li class="rake-nav"><a href="#bookmark-categories" id="view-bookmarks" data-toggle="tab">BOOKMARKS</a></li>
    <li class="rake-nav"><a href="#related-rakes" id="view-related-rakes" data-toggle="tab">RELATED</a></li>
  </ul>
</div>

<!-- Tab panes -->
<div class="tab-content">
  <br>
  <div class="tab-pane active" id="feed">
    <ul class="nav nav-tabs nav-thumbnails" role="tablist">
      <a href="#feed-view" data-toggle="tab">
        <li class="col-md-12 col-lg-6 <%= @feed_collapse %>">
          <div class="thumbnail">
            <div class="media">
              <span class="pull-left">
                <%= image_tag("newsfeed.jpg", size: "96x54") %>
              </span>
              <div class="media-body">
                <h5 class="media-heading">Feed</h5>
                <p>
                  updated: <%= time_ago_in_words(@rake.refreshed_at) %> ago
                </p>
              </div>
            </div>
          </div>
        </li>
      </a>
      <a href="#channels" data-toggle="tab">
        <li class="col-md-12 col-lg-6">
          <div class="thumbnail">
            <div class="media">
              <span class="pull-left">
                <%= image_tag("channels.jpg", size: "96x54") %>
              </span>
              <div class="media-body">
                <h5 class="media-heading">Channels</h5>
                <p>
                  <%= pluralize(@channels.count, "Channel") %>
                </p>
              </div>
            </div>
          </div>
        </li>
      </a>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane <%= @feed_collapse %>" id="feed-view">
        <!-- <a class="anchor" name="feed-view"></a> -->
        <h5>
          <% if user_signed_in? %>
            <span class="pull-right">
              <small><%= link_to "Update", master_rake_path(refresh: "yes", collapse: "feed"), { class: "btn btn-xs btn-primary", id: "ga-feed-refresh" } %></small>
            </span>
          <% else %>
            <span class="pull-right">
              <small><%= link_to "Sign in to update", new_user_session_path, { class: "btn btn-xs btn-primary", id: "ga-feed-refresh-sign-in" } %></small>
            </span>
          <% end %>
        </h5>
        <br><br>
        <% if @added_leaflets.count > 0 %>
          <%= render 'added_leaflets' %>
        <% end %>
        <%= render 'feed' %>
      </div>

      <div class="tab-pane" id="channels">
        <!-- <a class="anchor" name="channels"></a> -->
        <h5>
          <% if user_signed_in? %>
            <% if !@custom_rake.nil? %>
              <span class="pull-right">
                <small><%= link_to "Customize channels", myrake_path(@custom_rake), { class: "btn btn-xs btn-primary" } %></small>
              </span>
            <% else %>
              <span class="pull-right">
                <small>
                  <%= link_to "Customize channels", new_myrake_path(master_rake_id: @rake.id),
                                      data: { toggle: "modal",
                                              target: "#newCustomRakeModal",
                                            } %>
                </small>
              </span>
            <% end %>
          <% else %>
            <span class="pull-right">
              <small><%= link_to "Sign in to customize", new_user_session_path, { class: "btn btn-xs btn-primary", id: "ga-feed-refresh-sign-in" } %></small>
            </span>
          <% end %>
        </h5>
        <br><br>
        <%= render 'channels' %>
      </div>
    </div>
  </div>

  <div class="tab-pane" id="bookmark-categories">
    <%= render 'bookmark_categories' %>
  </div>

  <div class="tab-pane" id="related-rakes">
    <%= render 'related_rakes' %>
  </div>
</div>
