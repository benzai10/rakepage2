<ul id="feed-list" class="leaflet-list">
  <% heap = @heaps.find_by_leaflet_type_id(locals[:leaflet_type_id]) %>
  <% rake_heaps = @heaps.where(leaflet_type_id: params[:heap_type].to_i) %>
  <% heap_leaflets = [] %>
  <% rake_heaps.each do |rh| %>
    <% heap_leaflets << rh.leaflets %>
  <% end %>
  <% heap_leaflets.flatten! %>
  <% heap_leaflets.uniq! %>
  <% heap_leaflets.each do |l| %>
    <li class="rake-show-list" id="<%= "leaflet_" + l.id.to_s %>">
      <a class="pull-left" href="#">
        <% favicon_path = "http://www.google.com/s2/favicons?domain=" + Channel.find(l.channel_id).source %>
        <img class="media-object img-feed-show" src=<%= "#{favicon_path}" %> alt="media image">
      </a>
      <div class="media-body">
        <span class="feed-timestamp">
          <%= Channel.find(l.channel_id).name %>
          <% heap_leaflet = HeapLeafletMap.where("leaflet_id = ?", l.id).first %>
          <span class="pull-right">
            <% if !l.published_at.nil? %>
              <%= time_ago_in_words(l.published_at) %> ago 
            <% else %>
              <%= time_ago_in_words(l.created_at) %> ago 
            <% end %>
            <%#= link_to '<i class="fa fa-trash-o"></i>'.html_safe, 
                  remove_leaflet_heap_path(heap, leaflet_id: l.id),
                  :data => { :confirm => "Are you sure?" },
                  :method => :get, remote: true %>
          </span>
        </span>
        <br>
        <span class="leaflet-title">
          <% if !heap_leaflet.nil? %>
            <% title = heap_leaflet.leaflet_title %>
            <% if !title.nil? %>
              <%= link_to title, l.url, class: "external", value: l.id, target: "_blank" %>
            <% else %>
              <%= link_to l.title , l.url, class: "external", value: l.id, target: "_blank" %>
            <% end %>
          <% end %>
        </span>
        <!-- <p class="feed-body"><%#= highlight(l.content.html_safe, @rake_filter.split(",")) %></p> -->
        <p class="feed-body">
          <% if !heap_leaflet.nil? %>
            <% description = heap_leaflet.leaflet_desc %>
            <% if !description.nil? %>
              <%= description %>
            <% end %>
          <% end %>
        </p>
        <i class="fa fa-eye"></i> <span class="v_count_<%= l.id %>"><%= l.view_count %></span>
        &nbsp;|&nbsp;
        <i class="fa fa-star"></i> <span class="s_count_<%= l.id %>"><%= l.save_count %></span>
        &nbsp;|&nbsp;
        <i class="fa fa-eraser"></i> <span class="d_count_<%= l.id %>"><%= l.delete_count %></span>
        <span class="pull-right">
          <span id="<%= 'feed-heart-icon-' + l.id.to_s %>">
            <% if History.where("user_id = ?", current_user.id).liked.pluck(:leaflet_id).include? l.id %>
              <i class="fa fa-heart"></i>
            <% else %>
              <i class="fa fa-heart-o like" value=<%= l.id %>></i>
            <% end %>
          </span>
          <span class="l_count_<%= l.id %>"><%= l.like_count %></span>
          <% if user_signed_in? %>
            &nbsp;|&nbsp;
            <% own_rake = @rake.rakes.find_by_user_id(current_user.id) %>
            <% if !own_rake.nil? %>
              <% own_heap = Heap.where("rake_id = ? AND leaflet_type_id = ?", own_rake.id, locals[:leaflet_type_id].to_i) %>
              <% if !own_heap.empty? %>
                <% if HeapLeafletMap.where("heap_id = ? AND leaflet_id = ?", own_heap.first.id, l.id).count > 0 %>
                  <%= link_to '<i class="fa fa-star"></i>'.html_safe, '#' %>
                <% else %>
                  <%= link_to '<i class="fa fa-save"></i>'.html_safe, add_leaflet_rake_path(own_rake), 
                              data: { toggle: "modal", target: "#saveLeafletModal", id: l.id, title: l.title }, class: "leaflet-save" %>
                <% end %>
              <% else %>
                  <%= link_to '<i class="fa fa-save"></i>'.html_safe, add_leaflet_rake_path(own_rake), 
                              data: { toggle: "modal", target: "#saveLeafletModal", id: l.id, title: l.title }, class: "leaflet-save" %>
              <% end %>
            <% else %>
              <%#= link_to '<i class="fa fa-save"></i>'.html_safe, add_leaflet_rake_path(own_rake), 
                          data: { toggle: "modal", target: "#saveLeafletModal", id: l.id, title: l.title }, class: "leaflet-save" %>
            <% end %>
          <% end %>
        </span>
      </div>
      <hr>
    </li>
  <% end %>
</ul>
<%#= paginate @heaps.find_by_leaflet_type_id(locals[:leaflet_type_id]).leaflets %>