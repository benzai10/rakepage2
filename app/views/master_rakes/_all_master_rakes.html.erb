<div class="panel panel-default">
  <div class="panel-heading panel-all-master-rakes">
    <h5 class="panel-title">
      <a data-toggle="collapse" data-parent="#accordion-overview" 
         href="#collapse-all-master-rakes">
         All Recommendation Rakes
      </a>
    </h5>
  </div>
  <div class="panel-collapse collapse" id="collapse-all-master-rakes">
    <div class="panel-body">
      <div class="col-md-6">
        <% if user_signed_in? %>
          <% if params[:category_id].nil? %>
            <% category = "none" %>
          <% else %>
            <% category = params[:category_id] %>
          <% end %>
          <div class="thumbnail">
            <%= link_to new_master_rake_path, data: { 
                        toggle: "modal",
                        target: "#newMasterRakeModal",
                        category: category,
                        user: current_user.id },
                        class: "masterrake-create" do %>
              <div class="caption">
                <%= image_tag("add_master_rake.png") %>
                <div class="rake-caption">
                  Add New Rake
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="thumbnail">
            <%= link_to new_user_session_path do %>
              <div class="caption">
                <%= image_tag("add_master_rake.png") %>
                <div class="rake-caption">
                  Add New Rake
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <% @master_rakes.each do |m| %>
        <div class="col-md-6">
          <div class="thumbnail">
            <%= link_to master_rake_path(m.id, refresh: "no") do %>
              <div class="caption load-rake" value="<%= m.id %>">
                <% if m.image_url.nil? || m.image_url.empty? %>
                  <%= image_tag("no_image.png") %>
                <% else %>
                  <%= image_tag(m.image_url) %>
                <% end %>
                <div class="rake-caption">
                  <%= m.name %>
                  <span id="load-rake-<%= "#{m.id.to_s}" %>"></span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>