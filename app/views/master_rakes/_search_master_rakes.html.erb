<div class="row">
  <div class="col-md-12">
    <%= bootstrap_form_tag url: "/master_rakes/search", method: :get do |f| %>
      <%= f.hidden_field :id, class: "master-rake-id" %>
      <div class="input-group">
        <%= f.text_field :name, hide_label: true,
          data: { autocomplete: autocomplete_master_rake_name_master_rakes_path }, class: "master-rake-search" %>
        <span class="input-group-btn">
          <%= f.submit "Go", class: "btn btn-primary" %>
        </span>
      </div>
    <% end %>
  </div>
</div>