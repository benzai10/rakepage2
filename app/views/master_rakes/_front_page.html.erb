<!-- Nav tabs -->
<ul class="nav nav-tabs">
  <li class="active"><a href="#new-rakes" data-toggle="tab">New Master Rakes</a></li>
  <li><a href="#new-leaflets" data-toggle="tab">New Leaflets</a></li>
</ul>
<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="new-rakes">
    <br>
    <% @new_master_rakes.each do |m| %>
      <div class="col-md-6">
        <div class="thumbnail">
          <%= link_to master_rake_path(m.id) do %>
            <div class="caption load-rake" value="<%= m.id %>">
              <% if m.image_url.nil? || m.image_url.empty? %>
                <%= image_tag("no_image.png") %>
              <% else %>
                <%= image_tag(m.image_url) %>
              <% end %>
              <div class="rake-caption">
                <%= m.name %>
                <span id="load-rake-<%= "#{m.id.to_s}" %>"></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="tab-pane" id="new-leaflets">
    <%= render 'display_leaflets' %>
  </div>
</div>