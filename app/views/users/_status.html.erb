<div class="row">
  <div class="col-md-6">
    <div class="thumbnail" id="show-overview">
      <% if @top_rakes.count < 5 %>
        <% top_5_link = master_rakes_path %>
      <% else %>
        <% top_5_link = user_path(current_user, view: "top5") %>
      <% end %>
      <%= link_to top_5_link do %>
        <div class="media">
          <span class="pull-left">
            <p class="reminder-month">
              Focus
            </p>
            <p class="reminder-day">
              <i class="fa fa-rocket"></i>
            </p>
          </span>
          <div class="media-body">
            <h5 class="media-heading">Add <%= (5 - @top_rakes.count).to_s %> more Topics</h5>
            <p>
              <div class="progress progress-top-5">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= (@top_rakes.count * 20).to_s %>%;">
                </div>
              </div>
              <p class="rake-links">
                <% if @top_rakes.count < 5 %>
                  You have Top <%= @top_rakes.count.to_s %> of 5
                <% else %>
                  Yay, you have your Top 5!
                <% end %>
              </p>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="thumbnail" id="notifications-nav">
      <div class="media">
        <span class="pull-left">
          <p class="reminder-month">
            Notifications
          </p>
          <p class="reminder-day">
            <i class="fa fa-bullhorn"></i>
          </p>
        </span>
        <div class="media-body">
          <h5 class="media-heading">Rakepage News&nbsp;
            <span class="badge alert-danger">
              <% if current_user.last_notification_read_at.nil? %>
                <%= @notifications.count.to_s %>
              <% else %>
                <%= @notifications.where("published_at > ?", current_user.last_notification_read_at).count.to_s %>
              <% end %>
            </span>
          </h5>
          <p>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'progress_counts' %>
<%= render 'achievements' %>
<div class="hidden" id="notifications">
  <a class="anchor" id="notifications-anchor"></a>
  <%= render 'notifications' %>
</div>
