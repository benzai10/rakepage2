<div class="row">
  <div class="col-lg-6">
    <div class="thumbnail" id="show-overview">
      <% if @top_rakes.count < 5 %>
        <%= link_to master_rakes_path, 
                    data: { disable_with: 
                            "<div class='media'><span class='pull-left'><p class='reminder-month'>Focus</p><p class='reminder-day'><i class='fa fa-rocket'></i></p></span><div class='media-body'><h5 class='media-heading'><i class='fa fa-spinner'></i> Loading available topics...</h5></div></div>" } do %>
          <div class="media">
            <span class="pull-left">
              <p class="reminder-month">
                Focus
              </p>
              <p class="reminder-day">
                <i class="fa fa-rocket"></i>
              </p>
            </span>
            <div class="media-body">
              <h5 class="media-heading">Add <%= (5 - @top_rakes.count).to_s %> more Topics</h5>
              <p>
                <div class="progress progress-top-5">
                  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= (@top_rakes.count * 20).to_s %>%;">
                  </div>
                </div>
                <p class="rake-links">
                  You have Top <%= @top_rakes.count.to_s %> of 5
                </p>
              </p>
            </div>
          </div>
        <% end %>
      <% else %>
        <%= link_to "#", id: "show-top-5" do %>
          <div class="media">
            <span class="pull-left">
              <p class="reminder-month">
                Focus
              </p>
              <p class="reminder-day">
                <i class="fa fa-rocket"></i>
              </p>
            </span>
            <div class="media-body">
              <h5 class="media-heading">You have set your Top 5</h5>
              <p>
                <div class="progress progress-top-5">
                  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= (@top_rakes.count * 20).to_s %>%;">
                  </div>
                </div>
                <p class="rake-links">
                  Click to see your Top 5
                </p>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="thumbnail" id="notifications-nav">
      <div class="media">
        <span class="pull-left">
          <p class="reminder-month">
            Notifications
          </p>
          <p class="reminder-day">
            <i class="fa fa-bullhorn"></i>
          </p>
        </span>
        <div class="media-body">
          <h5 class="media-heading">Rakepage News&nbsp;
            <span class="badge badge-rakepage">
              <% if current_user.last_notification_read_at.nil? %>
                <%= @notifications.count.to_s %>
              <% else %>
                <%= @notifications.where("published_at > ?", current_user.last_notification_read_at).count.to_s %>
              <% end %>
            </span>
          </h5>
          <p class="rake-links">
            Click to read the notifications
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'progress_counts' %>
<%= render 'achievements' %>
<div class="hidden" id="notifications">
  <a class="anchor" id="notifications-anchor"></a>
  <%= render 'notifications' %>
</div>
