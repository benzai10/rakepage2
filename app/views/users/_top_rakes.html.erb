<% if @top_rakes.count == 0 %>
  <div class="thumbnail" id="show-overview">
    <%= link_to master_rakes_path do %>
      <div class="media">
        <span class="pull-left">
          <p class="reminder-month">
            Committed
          </p>
          <p class="reminder-day">
            <i class="fa fa-bullseye"></i>
          </p>
        </span>
        <div class="media-body">
          <h5 class="media-heading">Choose a Topic (Rake)</h5>
          <p>
            Click to add a topic to your Top 5
          </p>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="row">
    <% @top_rakes.each do |r| %>
      <div class="col-md-12">
        <div class="thumbnail">
          <%= link_to myrake_path(r, view: "tasks"), 
                                  data: {disable_with: "<div class='media'><span class='pull-left'><p class='reminder-month'></p><p class='reminder-day'><i class='fa fa-spinner'></i></p></span><div class='media-body'><h5 class='media-heading'>Loading... checking for actions.</h5></div></div>"} do %>
            <% master_rake = MasterRake.find(r.master_rake_id) %>
            <div class="media rake-index-view" value="<%= r.id %>">
              <span class="pull-left">
                <% if master_rake.image_url.nil? || master_rake.image_url.empty? %>
                  <%= image_tag("no_image.png", size: "96x54") %>
                <% else %>
                  <%= image_tag(master_rake.image_url, size: "96x54") %>
                <% end %>
              </span>
              <div class="media-body">
                <h5 class="media-heading">
                  <%= r.name %>
                </h5>
                <p>
                  <%= render 'myrakes/top_rake_chain', toprake: r %>
                  <p class="rake-links">
                    Due Actions: 
                    <span class="new-rec-alert"><%= r.due_tasks_count %></span>
                    &nbsp;|&nbsp;
                    Committed Actions:
                    <%= r.action_count %>
                  </p>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>