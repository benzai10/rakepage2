<% title @rake.name + " Recommendations" %>
<div class="container-fluid">
  <%= render 'myrakes/rakes_menu' %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>
        <%= @rake.name %> Recommendations
      </h1>
      <h5>
        <small>
          <% if !current_user.nil? %>
            <%= link_to "MY RECOMMENDATION RAKES", myrakes_path %>
            &nbsp;|&nbsp;
          <% end %>
          <%= link_to "ALL RECOMMENDATION RAKES", master_rakes_path %>
          <% if !user_signed_in? %>
            &nbsp;|&nbsp;
            <%= link_to "SIGN IN", new_user_session_path %>
          <% end %>
        </small>
      </h5>
      <div class="panel-group" id="accordion-main">
        <%= render 'news' %>
      </div>
      <div class="panel-group" id="accordion-show">
        <%= render 'feed' %>
        <%= render 'channels' %>
        <%= render 'recommendations' %>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <%= render 'myrakes/leaflet_move_modal' %>
  <%= render 'myrakes/leaflet_save_modal' %>
  <%= render 'myrakes/leaflet_create_modal' %>
  <%= render 'myrakes/leaflet_edit_modal' %>
  <%= render 'myrakes/leaflet_edit_restricted_modal' %>
<% end %>
<%= render 'myrakes/heap_add_modal' %>
<%#= render 'rakes/social_modal' %>
<%= render 'new_rake_modal' %>