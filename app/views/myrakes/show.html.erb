<% title @rake.name + " " + @rake.master_rake.seo_title %>
<% meta title: @rake.name + " " + @rake.master_rake.seo_title,
        description: @rake.master_rake.description,
        keywords: Category.find(@rake.master_rake.category_id).leaflet_types.pluck(:leaflet_type_desc) << "Recommendations" << "Bookmarks" << @rake.name %>
<div class="container-fluid">
  <%= render 'myrakes/rakes_menu' %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <!-- <h1>Productive Bookmarking</h1> -->
      <h5>
        <small>
          <%= link_to "ALL RAKES", master_rakes_path, { class: "nav-link", id: "ga-all-master-rakes"} %>
          &nbsp;|&nbsp;
          <% if !current_user.nil? %>
            <%= link_to "MY RAKES", myrakes_path, { class: "nav-link", id: "ga-my-bookmarking-rakes-index" } %>
            &nbsp;<i class="fa fa-long-arrow-right"></i>&nbsp;
            <%= link_to pluralize(@overdue_leaflets.count, "REMINDER").upcase, myrakes_path(collapse: "reminders"), class: "new-rec-alert" %>
          <% end %>
          <% if !user_signed_in? %>
            <span class="nav-link">MY RAKES</span>
            &nbsp;<i class="fa fa-long-arrow-left"></i>&nbsp;
            <%= link_to "SIGN IN", new_user_session_path, { class: "nav-link", id: "my-rakes-sign-in" } %>
          <% end %>
        </small>
      </h5>
      <% if !flash.empty? %>
        <%= render 'shared/flash_message' %>
      <% end %>
      <h1>
        <%= @rake.name %>
        <span class="pull-right">
          <small>
            <% if user_signed_in? && @rake.user_id == current_user.id %>
              <%= link_to "Delete", myrake_path(@rake),
                            :data => { :confirm => "Are you sure?" }, 
                            :method => :delete %>
            <% end %>
          </small>
        </span>
      </h1>
      <div class="panel-group" id="accordion-main">
        <div class="panel panel-default">
          <div class="panel-heading panel-myrake">
            <h5 class="panel-title">
              Everything in one place
              <span class="pull-right">
                <small>
                  <%= link_to '<i class="fa fa-long-arrow-right white"></i>'.html_safe + " MASTER RAKE", master_rake_path(@rake.master_rake), class: "white" %>
                </small>
              </span>
            </h5>
          </div>
          <div class="panel-collapse collapse in" id="collapse-feed">
            <div class="panel-body">
              <%= render 'myrake' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <%= render 'myrakes/leaflet_move_modal' %>
  <%= render 'myrakes/leaflet_save_modal' %>
  <%= render 'myrakes/leaflet_create_modal' %>
  <%= render 'myrakes/leaflet_edit_modal' %>
  <%= render 'myrakes/leaflet_edit_restricted_modal' %>
<% end %>
<%= render 'myrakes/heap_add_modal' %>
<%#= render 'rakes/social_modal' %>
<%= render 'new_rake_modal' %>