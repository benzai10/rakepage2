<% if @rake.master_rake.seo_title.nil? %>
  <% seo_title = "" %>
<% else %>
  <% seo_title = @rake.master_rake.seo_title %>
<% end %>
<% title @rake.name + " " + seo_title %>
<% meta title: @rake.name + " " + seo_title,
        description: @rake.master_rake.description,
        keywords: Category.find(@rake.master_rake.category_id).leaflet_types.pluck(:leaflet_type_desc) << "Recommendations" << "Bookmarks" << @rake.name %>
<div class="container-fluid">
  <%= render 'myrakes/rakes_menu' %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h5>
        <small>
          <% if user_signed_in? %>
            <%= link_to "MY RAKES", user_path(current_user) %>
          <% else %>
            <span class="nav-link">MY RAKES</span>
            &nbsp;<i class="fa fa-long-arrow-left"></i>&nbsp;
            <%= link_to "SIGN IN", new_user_session_path, { class: "nav-link", id: "my-rakes-sign-in" } %>
          <% end %>
          &nbsp;|&nbsp;
          <%= link_to "ALL TOPICS", master_rakes_path, { class: "nav-link", id: "ga-all-master-rakes"} %>
        </small>
      </h5>
      <% if !flash.empty? %>
        <%= render 'shared/flash_message' %>
      <% end %>
      <h1>
        <%= @rake.name %>
        <span class="pull-right">
          <small>
            <% if user_signed_in? && @rake.user_id == current_user.id %>
              <% if @rake.top_rake == 0 %>
                <% if @top_rakes_count < 5 %>
                  <%= link_to "Add to Top 5", toggle_top_rake_myrake_path(@rake),
                              method: :post,
                              remote: true,
                              id: "top-toggle" %>
                  &nbsp;|&nbsp;
                <% end %>
              <% else %>
                <%= link_to "Remove from Top 5", toggle_top_rake_myrake_path(@rake),
                            method: :post,
                            remote: true,
                            id: "top-toggle" %>
                &nbsp;|&nbsp;
              <% end %>
              <%= link_to "Delete", myrake_path(@rake),
                            :data => { :confirm => "Are you sure?" }, 
                            :method => :delete %>
            <% end %>
          </small>
        </span>
      </h1>
      <% if params[:view] == "tasks" %>
        <%= render 'tasks' %>
        <% if user_signed_in? %>
          <%= render 'leaflet_edit_modal' %>
        <% end %>
      <% elsif params[:view].nil? || params[:view] == "news" %>
        <%= render 'news' %>
        <% if user_signed_in? %>
          <%= render 'leaflet_save_modal' %>
        <% end %>
      <% elsif params[:view] == "bookmarks" %>
        <%= render 'bookmarks' %>
        <% if user_signed_in? %>
          <%= render 'leaflet_edit_modal' %>
          <%= render 'leaflet_create_modal' %>
          <%= render 'leaflet_copy_modal' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>