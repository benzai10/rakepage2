<div class="panel panel-default">
  <div class="panel-heading panel-my-rakes-overview">
    <h5 class="panel-title">
         My Rakes (<%= User.find(current_user.id).username %>)
      </a>
    </h5>
  </div>
  <div class="panel-collapse collapse in" id="collapse-overview">
    <div class="panel-body">
      <div>
        <div class="row">
         <div class="tab-header">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs nav-thumbnails" role="tablist">
              <li class="col-md-6">
                <a href="#my-rakes" role="tab" data-toggle="tab">
                  <div class="thumbnail">
                    <div class="media">
                      <span class="pull-left">
                        <%= image_tag("rakes_basic.png", size: "96x54") %>
                      </span>
                      <div class="media-body">
                        <h5 class="media-heading"><%= pluralize(@rakes.count, "Rake") %></h5>
                        <p>
                        </p>
                      </div>
                    </div>
                  </div>
                </a>
              </li>

              <li class="col-md-6">
                <a href="#my-recommendations" role="tab" data-toggle="tab">
                  <div class="thumbnail">
                    <div class="media">
                      <span class="pull-left">
                        <%= image_tag("rakes_basic.png", size: "96x54") %>
                      </span>
                      <div class="media-body">
                        <h5 class="media-heading"><%= pluralize(@recommendations.count, "Recommendation") %></h5>
                        <p>
                          <span class="new-rec-alert">
                            <% if @overdue_leaflets.count > 0 %>
                              <%= pluralize(@overdue_leaflets.count, "Recommendation Reminder") %>
                            <% end %>
                          </span>
                        </p>
                      </div>
                    </div>
                  </div>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane active" id="my-rakes">
            <a class="anchor" name="my-rakes"></a>
            <h5>My Rakes</h5>
            <%= render 'my_rakes' %>
          </div>
          <div class="tab-pane" id="my-recommendations">
            <a class="anchor" name="my-recommendations"></a>
            <h5>Recommendation Reminders</h5>
            <%= render 'my_overdue_recommendations' %>
            <h5>Scheduled Recommendations</h5>
            <%= render 'my_scheduled_recommendations' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>