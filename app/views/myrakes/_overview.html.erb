<h1><%= User.find(current_user.id).username %>, get productive based on inspirations!</h1>
<div class="panel panel-default">
  <div class="panel-heading panel-my-rakes-overview">
    <h5 class="panel-title">
      <%= "#{@rakes.count} Rakes with #{@recommendations.count} bookmarked Inspirations" %>
    </h5>
  </div>
  <div class="panel-collapse collapse in" id="collapse-overview">
    <div class="panel-body">
      <div class="row">
        <div class="tab-header">
          <!-- Nav tabs -->
          <ul class="nav nav-tabs" role="tablist">
            <li class="rake-nav <%= @toprakes_collapse %>">
              <a href="#top-rakes" id="ga-view-toprakes" role="tab" data-toggle="tab">TOP 5</a>
            </li>
            <li class="rake-nav <%= @myrakes_collapse %>">
              <a href="#my-rakes" id="ga-view-myrakes" role="tab" data-toggle="tab">OTHER</a>
            </li>
            <li class="rake-nav <%= @reminders_collapse %>">
              <a href="#my-recommendations" id="ga-view-reminders" role="tab" data-toggle="tab">
                REMINDERS&nbsp;&nbsp;
                <span class="badge pull-right"><%= @overdue_leaflets.count.to_s %></span>
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane <%= @toprakes_collapse %>" id="top-rakes">
          <br>
          <%= render 'top_rakes' %>
        </div>
        <div class="tab-pane <%= @myrakes_collapse %>" id="my-rakes">
          <br>
          <%= render 'my_rakes' %>
        </div>
        <div class="tab-pane <%= @reminders_collapse %>" id="my-recommendations">
          <br>
          <span class="rake-nav">CURRENT INSPIRATIONS<hr></span>
          <% if @overdue_leaflets.count > 0 %>
            <%= render 'my_overdue_recommendations' %>
          <% else %>
            <p class="centered">
              Yay, nothing here. You must be up-to-date with everything!
            </p>
            <br>
            <br>
          <% end %>
          <span class="rake-nav">UPCOMING INSPIRATIONS<hr></span>
          <% if @scheduled_leaflets.count > 0 %>
            <%= render 'my_scheduled_recommendations' %>
          <% else %>
            <p class="centered">
              Add reminders to your bookmarked inspirations to increase your productivity!
            </p>
            <br><br><br><br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>