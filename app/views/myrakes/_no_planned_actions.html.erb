<% if @rake.scheduled_tasks_count == 0 %>
  <% show_flag = "" %>
<% else %>
  <% show_flag = "hidden" %>
<% end %>
<div class="<%= show_flag %> landing-page" id="no-due-actions">
  <br>
  <ul id="feed-list" class="leaflet-list">
    <li class="card">
      <div class="card-header">
        <span class="card-icon">
          <%= image_tag "rakepage_logo_transparent_32x32.png", size: "16x16" %>
        </span>
        <span class="card-label">
          Maximize taking action
        </span>
      </div>
      <div class="card-title">
        Add Task or Read News
      </div>
      <div class="card-content">
        <p>
          Schedule tasks by clicking on "Add task or weblink". Get updated without distractions by clicking on "Read news feed".
        </p>
      </div>
    </li>
  </ul>
</div>