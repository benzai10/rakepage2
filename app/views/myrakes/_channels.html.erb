<% if user_signed_in? && @rake.user_id == current_user.id %>
  <div class="thumbnail">
    <%= link_to new_channel_path(rake_id: @rake.id, channel_type: 0),
                  data: { toggle: "modal",
                          target: "#addRssModal",
                          rakeid: @rake.id,
                          channeltype: 0 },
                  class: "add-rss-feed" do %>
      <div class="media">
        <span class="pull-left">
          <p class="reminder-month">
            RSS
          </p>
          <p class="reminder-day">
            <i class="fa fa-rss"></i>
          </p>
        </span>
        <div class="media-body">
          <h5 class="media-heading">
            Add your favorite blog (RSS feed).
          </h5>
          <p>
            Make sure it's related to this topic. Click to add the URL.
          </p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="thumbnail">
    <%= link_to new_channel_path(rake_id: @rake.id, channel_type: 4),
                  data: { toggle: "modal",
                          target: "#addSubredditModal",
                          rakeid: @rake.id,
                          channeltype: 4 },
                  class: "add-subreddit-feed" do %>
      <div class="media">
        <span class="pull-left">
          <p class="reminder-month">
            Subreddit
          </p>
          <p class="reminder-day">
            <i class="fa fa-reddit"></i>
          </p>
        </span>
        <div class="media-body">
          <h5 class="media-heading">
            Add your favorite subreddit from Reddit.com
          </h5>
          <p>
            Please enter only the name of the subreddit (without /r/)
          </p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<% if @rake.user_id == current_user.id %>
  <ul class="leaflet-list">
    <% if (@new_channels - @rake.channels).count > 0 %>
      <span class="rake-nav">INACTIVE CHANNELS<hr></span>
      <% @new_channels.each do |c| %>
        <% if !@rake.channels.include? c %>
          <li class="channel-list" id="<%= 'channel_' + c.id.to_s %>">
            <span class="pull-left">
              <% if c.channel_type == 4 %>
                <%= image_tag "reddit-32.png", size: "16x16", class: "media-object img-feed-show" %>
              <% elsif c.channel_type == 3 %>
                <%= image_tag "rakepage_logo_transparent_32x32.png", size: "16x16", class: "media-object img-feed-show" %>
              <% else %>
                <% favicon_path = "http://www.google.com/s2/favicons?domain=" + c.source %>
                <img class="media-object img-feed-show" src=<%= "#{favicon_path}" %> alt="media image">
              <% end %>
            </span>
            <div class="media-body">
              <h5 class="media-heading channel-heading">
                <% channel_name = c.name %>
                <% if channel_name == "Title not available." %>
                  <% channel_name = c.source %>
                <% end %>
                <% if c.channel_type == 0 %> 
                  <%= link_to channel_name, c.source.match(/^http:\/\/[^\/]*/).to_s, class: "external", target: "_blank" %>
                <% elsif c.channel_type == 4 %>
                  <%= link_to channel_name, "http://www.reddit.com" + c.name, class: "external", target: "_blank" %>
                <% else %>
                  <%= channel_name %>
                <% end %>
                <% if user_signed_in? %>
                  <span class="pull-right">
                  <%= link_to "Add",
                        add_channel_myrake_path(@rake, channel: c.id),
                        title: "Add Channel to own Rake", class: "btn btn-xs btn-default" %>
                  </span>
                <% end %>
              </h5>
              <p class="channel-info">
                <%= c.count_subscribers %>&nbsp;<i class="fa fa-user" title="Count of channel users"></i>
              </p>
            </div>
          </li>
        <% end %>
      <% end %>
    <% else %>
      <span class="rake-nav">INACTIVE CHANNELS<hr></span>
      <p class="centered">None</p>
    <% end %>
  </ul>
<% end %>
<br>
<span class="rake-nav">ACTIVATED CHANNELS<hr></span>
<ul class="leaflet-list">
  <% @rake.channels.each do |c| %>
    <% if c.channel_type != 3 %>
      <li class="channel-list" id="<%= 'channel_' + c.id.to_s %>">
        <span class="pull-left" >
          <% if c.channel_type == 4 %>
            <%= image_tag "reddit-32.png", size: "16x16", class: "media-object img-feed-show" %>
          <% elsif c.channel_type == 3 %>
            <%= image_tag "rakepage_logo_transparent_32x32.png", size: "16x16", class: "media-object img-feed-show" %>
          <% else %>
            <% favicon_path = "http://www.google.com/s2/favicons?domain=" + c.source %>
            <img class="media-object img-feed-show" src=<%= "#{favicon_path}" %> alt="media image">
          <% end %>
        </span>
        <div class="media-body">
          <h5 class="media-heading channel-heading">
            <% channel_name = c.name %>
            <% if channel_name == "Title not available." %>
              <% channel_name = c.source %>
            <% end %>
            <% if c.channel_type == 0 %> 
              <%= link_to channel_name, c.source.match(/^http:\/\/[^\/]*/).to_s, class: "external", target: "_blank" %>
            <% elsif c.channel_type == 4 %>
              <%= link_to channel_name, "http://www.reddit.com" + c.name, class: "external", target: "_blank" %>
            <% else %>
              <%= channel_name %>
            <% end %>
            <% if user_signed_in? && @rake.user_id == current_user.id %>
              <span class="pull-right">
                <%= link_to "Remove", remove_channel_myrake_path(@rake, channel: c.id),
                            :data => { :confirm => "Are you sure?" },
                            :method => :get,
                            class: "btn btn-xs btn-default" %>
              </span>
            <% end %>
          </h5>
          <p class="channel-info">
            <%= c.count_subscribers %>&nbsp;<i class="fa fa-user" title="Count of channel users"></i>
          </p>
        </div>
        <br>
      </li>
    <% end %>
  <% end %>
</ul>