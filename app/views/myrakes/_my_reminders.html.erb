<ul class="nav nav-tabs nav-thumbnails" role="tablist">
  <a href="#current-reminders" data-toggle="tab">
    <li class="col-md-6">
      <div class="thumbnail">
        <div class="media">
          <span class="pull-left">
            <%#= image_tag("reminder_image.png", size: "96x54") %>
            <p class="reminder-month">
              <%= Date.today.strftime("%B") %>
            </p>
            <p class="reminder-day">
              <%= Time.now.day %>
            </p>
          </span>
          <div class="media-body">
            <h5 class="media-heading">
              Reminders
              <span class="badge badge-reminders alert-danger"><%= @overdue_leaflets.count.to_s %></span>
            </h5>
            <p>
            </p>
          </div>
        </div>
      </div>
    </li>
  </a>
  <%= link_to myrakes_path(collapse: "scheduled_reminders") do %>
    <li class="col-md-6">
      <div class="thumbnail">
        <div class="media">
          <span class="pull-left">
            <%#= image_tag("reminder_image.png", size: "96x54") %>
            <p class="reminder-month">
              Upcoming
            </p>
            <p class="reminder-day">
              >>
            </p>
          </span>
          <div class="media-body">
            <h5 class="media-heading">
              Scheduled
              <span class="badge badge-scheduled alert-warning"><%= @scheduled_leaflets.count.to_s %></span>
            </h5>
            <p>
            </p>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane <%= @reminders_collapse %>" id="current-reminders">
    <a class="anchor" name="current-reminders"></a>
    <% @overdue_leaflets.count > 0 ? empty_list = "hidden" : emtpy_list = "" %>
    <p class="centered <%= empty_list %>" id="empty-reminders">
      Yay, nothing here. You must be up-to-date with everything!
    </p>
    <%= render 'my_overdue_recommendations' %>
    <br><br><br><br><br>
  </div>
  <div class="tab-pane <%= @scheduled_reminders_collapse %>" id="scheduled-reminders">
    <a class="anchor" name="scheduled-reminders"></a>
    <% @scheduled_leaflets.count > 0 ? empty_list = "hidden" : emtpy_list = "" %>
    <p class="centered <%= empty_list %>" id="empty-scheduled">
      Add reminders to your bookmarked inspirations to increase your productivity!
    </p>
    <%= render 'my_scheduled_recommendations' %>
    <br><br><br><br><br>
  </div>
</div>