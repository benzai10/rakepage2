<% @new_channels = MasterRake.find(@rake.master_rake_id).channels
                            .where("channel_type <> 3 AND channel_type <> 5")
                            .order("created_at DESC")
                            .limit(5) %>

<!-- Nav tabs -->
<div class="row">
  <ul class="nav nav-tabs" role="tablist">
    <li class="rake-nav <%= @feed_collapse %>"><a href="#feed" id="view-news" data-toggle="tab">NEWS</a></li>
    <li class="rake-nav <%= @heap_collapse %>"><a href="#bookmark-categories" id="view-bookmarks" data-toggle="tab">BOOKMARKS</a></li>
    <li class="rake-nav"><a href="#related-rakes" id="view-related-rakes" data-toggle="tab">RELATED</a></li>
  </ul>
</div>

<!-- Tab panes -->
<div class="tab-content">
  <br>
  <div class="tab-pane active" id="feed">
    <ul class="nav nav-tabs nav-thumbnails" role="tablist">
      <a href="#feed-view" data-toggle="tab">
        <li class="col-md-12 col-lg-6 <%= @feed_collapse %>">
          <div class="thumbnail">
            <div class="media">
              <span class="pull-left">
                <%= image_tag("newsfeed.jpg", size: "96x54") %>
              </span>
              <div class="media-body">
                <h5 class="media-heading">Feed</h5>
                <p>
                </p>
              </div>
            </div>
          </div>
        </li>
      </a>
      <a href="#channels" data-toggle="tab">
        <li class="col-md-12 col-lg-6">
          <div class="thumbnail">
            <div class="media">
              <span class="pull-left">
                <%= image_tag("channels.jpg", size: "96x54") %>
              </span>
              <div class="media-body">
                <h5 class="media-heading">Channels</h5>
                <p>
                </p>
              </div>
            </div>
          </div>
        </li>
      </a>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane <%= @feed_collapse %>" id="feed-view">
        <!-- <a class="anchor" name="feed-view"></a> -->
        <h5>
          <span class="pull-right">
          <% if user_signed_in? %>
            <small><%= link_to "Refresh", myrake_path(refresh: "yes", collapse: "feed"), { class: "btn btn-xs btn-primary", id: "ga-my-feed-refresh" } %></small>
          <% else %>
            <small><%= link_to "Sign in to refresh or save", new_user_session_path, id: "ga-my-feed-refresh-sign-in" %></small>
          <% end %>
          </span>
        </h5>
        <br><br>
        <% if @added_leaflets.count > 0 %>
          <%= render 'added_leaflets' %>
        <% end %>
        <%= render 'feed' %>
      </div>

      <div class="tab-pane" id="channels">
        <!-- <a class="anchor" name="channels"></a> -->
        <h5>
          <span class="pull-right">
            <% if user_signed_in? && @rake.user_id == current_user.id %>
              <%= link_to "Add Blog", new_channel_path(rake_id: @rake.id, channel_type: 0),
                          data: { toggle: "modal",
                                  target: "#addRssModal",
                                  rakeid: @rake.id,
                                  channeltype: 0 },
                          class: "btn btn-xs btn-primary add-rss-feed" %>
              <%= link_to "Add Subreddit", new_channel_path(rake_id: @rake.id, channel_type: 4),
                          data: { toggle: "modal",
                                  target: "#addSubredditModal",
                                  rakeid: @rake.id,
                                  channeltype: 4 },
                          class: "btn btn-xs btn-primary add-subreddit-feed" %>
            <% else %>
              <%= link_to "Add Blog", new_user_session_path, 
                          class: "btn btn-xs btn-primary add-rss-feed" %>
              <%= link_to "Add Subreddit", new_user_session_path,
                          class: "btn btn-xs btn-primary add-subreddit-feed" %>
            <% end %>
          </span>
        </h5>
        <br><br>
        <%= render 'channels' %>
      </div>
    </div>
  </div>
  
  <div class="tab-pane <%= @heap_collapse %>" id="bookmark-categories">
    <%= render 'bookmark_categories' %>
  </div>
  <div class="tab-pane" id="related-rakes">
    <%= render 'related_rakes' %>
  </div>
</div>