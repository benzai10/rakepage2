<div class="hidden" id="new-action">
  <br>
  <%= bootstrap_form_for(@rake) do |f| %>
    <%= f.label "Task Description", class: "rakepage-form-label" %>
    <%= f.text_field :leaflet_goal, { hide_label: true, class: "leaflet-goal" } %>
    <% reminder_period = [] %>
    <% reminder_period << ["in 1 hour", 1] %>
    <% reminder_period << ["in 1 day", 2] %>
    <% reminder_period << ["in 3 days", 3] %>
    <% reminder_period << ["in 1 week", 4] %>
    <% reminder_period << ["in 1 month", 5] %>
    <%= f.label "Set a reminder", class: "rakepage-form-label" %>
    <%= f.select :reminder_at, options_for_select(reminder_period), { hide_label: true }, id: "reminder_at", class: "reminderat" %>
    <%#= f.label "Notes", class: "rakepage-form-label" %>
    <%#= f.text_area :leaflet_note, { hide_label: true, rows: 5, class: "leaflet-note" } %>
    <%= f.label "Add a weblink (optional)", class: "rakepage-form-label" %>
    <div class="add-url">
      <%= f.text_field :leaflet_url, { hide_label: true, placeholder: "Enter with http://", class: "leaflet-url" } %>
      <%# leaflet_types_array = LeafletType.where("id IN (?) AND id <> 15", CategoryLeafletTypeMap.where(category_id: MasterRake.find(@rake.master_rake_id).category_id).pluck(:leaflet_type_id)).map { |lt| [lt.leaflet_type_desc, lt.id] } %>
      <div class="row">
        <div class="col-md-6">
          <%#= f.label "Choose a category", class: "rakepage-form-label" %>
          <%#= f.select :leaflet_type_id, options_for_select(leaflet_types_array, :heap_id), { hide_label: true }, class: "heap-id" %>
        </div>
        <div class="col-md-6">
          <span class="centered">
            <%#= f.label "Rating", class: "rating-label rakepage-form-label" %>
            <%#= f.number_field :current_rating, { hide_label: true,
                                                  data: { min: "1", 
                                                          max: "5", 
                                                          clearable: " ",
                                                          'icon-lib' =>"fa",
                                                          'active-icon' => "fa-star fa-2x",
                                                          'inactive-icon' => "fa-star-o fa-2x",
                                                          'clearable-icon' => "fa-times" },
                                                  id: "rating-1",
                                                  class: "rating" } %>
          </span>
        </div>
      </div>
    </div>
    <%#= f.label "Qualify your action", class: "score-label rakepage-form-label" %>
    <%#= f.hidden_field :current_score, value: 0, id: "current-score-new" %>
<!--     <div class="btn-group btn-group-justified" data-toggle="buttons">
      <label class="btn btn-default label-score-0-new">
        <input type="radio" name="options" id="option1" autocomplete="off" checked>
        None
      </label>
      <label class="btn btn-default label-score-1-new">
        <input type="radio" name="options" id="option2" autocomplete="off">
        Steps&nbsp;|&nbsp;<span id="motion-counter-new">0</span>
      </label>
      <label class="btn btn-default label-score-2-new">
        <input type="radio" name="options" id="option3" autocomplete="off">
        Goals&nbsp;|&nbsp;<span id="action-counter-new">0</span>
      </label>
    </div> -->
    <br>
    <%#= f.label "Journal entry", class: "rakepage-form-label" %>
    <%#= f.text_area :task_comment, { hide_label: true, class: "task-comment" } %>
    <span>
      <button type="button" class="btn btn-default" id="abort-new-action">Cancel</button>
      <%= f.button "Save",
                    class: "btn btn-primary",
                    name: "commit",
                    value: "Create Action",
                    data: { disable_with: "<i class='fa fa-spinner fa-spin white'></i> Creating..." } %>
    </span>
  <% end %>
  <br><hr><br>
</div>