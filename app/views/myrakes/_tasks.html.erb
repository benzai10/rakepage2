<div class="panel panel-default">
  <div class="panel-heading panel-tasks">
    <h5 class="panel-title">
      Stay focused and take action
      <span class="pull-right">
        <small class="white">
          <i class="fa fa-cog rake-settings white"></i>
        </small>
      </span>
    </h5>
  </div>
  <div class="panel-collapse collapse in" id="collapse-news">
    <div class="panel-body">
      <%= render 'rake_settings' %>
      <!-- Nav tabs -->
      <div class="row">
        <div class="col-md-12">
          <div class="media">
            <span class="pull-left">
              <% if @rake.master_rake.image_url.nil? || @rake.master_rake.image_url.empty? %>
                <%= image_tag("no_image.png", size: "96x54") %>
              <% else %>
                <%= image_tag(@rake.master_rake.image_url, size: "96x54") %>
              <% end %>
            </span>
            <div class="media-body">
              <p class="media-heading">
                <small>
                  <span class="today-label-left">&nbsp;<i class="fa fa-angle-down"></i> 30 days ago</span>
                  <span class="today-label-right">Today <i class="fa fa-angle-down"></i>&nbsp;</span>
                </small>
              </p>
              <p>
                <div class="progress progress-chain">
                  <% chain_array = History.get_chain(@rake.id, Time.find_zone(cookies[:timezone])) %>
                  <% chain_array.each do |chain_element| %>
                    <% if chain_element[1] == true %>
                      <div class="progress-bar progress-bar-success bookmark-metrics-action" style="width: 3.33%"></div>
                    <% elsif chain_element[0] == true %>
                      <div class="progress-bar progress-bar-success bookmark-metrics-motion" style="width: 3.33%"></div>
                    <% else %>
                      <div class="progress-bar progress-bar-success bookmark-metrics" style="width: 3.33%"></div>
                    <% end %>
                  <% end %>
                </div>
              </p>
              <p class="rake-links">
                Due Actions: 
                <span class="new-rec-alert"><%= @rake.due_tasks_count %></span>
                &nbsp;|&nbsp;
                Committed Actions:
                <%= @rake.action_count %>
              </p>
            </div>
            <div>
              <hr>
            </div>
          </div>
        </div>
        <ul class="nav nav-tabs" role="tablist">
          <li class="rake-nav <%= @due_active %>">
            <a href="#due-tasks" id="view-due-tasks" data-toggle="tab">
              NOW
            </a>
          </li>
          <li class="rake-nav <%= @scheduled_active %>">
            <a href="#scheduled-tasks" id="view-scheduled-tasks" data-toggle="tab">
              PLANNED
            </a>
          </li>
          <li class="rake-nav">
            <a href="#related-rakes" id="view-related-rakes" data-toggle="tab">
              RELATED
            </a>
          </li>
        </ul>
      </div>
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane <%= @due_active %>" id="due-tasks">
          <%= render 'due_tasks' %>
        </div>
        <div class="tab-pane <%= @scheduled_active %>" id="scheduled-tasks">
          <%= render 'scheduled_tasks' %>
        </div>
        <div class="tab-pane" id="related-rakes">
          <br>
          <%= render 'related_rakes' %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'edit_action' %>