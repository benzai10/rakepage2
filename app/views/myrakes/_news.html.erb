<div class="panel panel-default">
  <div class="panel-heading panel-overview">
    <h5 class="panel-title">
      News
      <span class="pull-right">
        <small>
          <%= link_to "TASKS", myrake_path(@rake, view: "tasks") %>
          <span class="new-rec-alert">
            <%= " " + @rake.due_tasks_count.to_s unless @rake.due_tasks_count == 0 %>
          </span>
          &nbsp;|&nbsp;
          <%= link_to "BOOKMARKS", myrake_path(@rake, view: "bookmarks") %>
        </small>
      </span>
    </h5>
  </div>
  <div class="panel-collapse collapse in" id="collapse-news">
    <div class="panel-body">
      <!-- Nav tabs -->
      <div class="row">
        <ul class="nav nav-tabs" role="tablist">
          <li class="rake-nav active">
            <a href="#feed" id="view-news" data-toggle="tab">
              FEED
            </a>
          </li>
          <li class="rake-nav">
            <a href="#channels" id="view-channels" data-toggle="tab">
              CHANNELS
            </a>
          </li>
          <li class="rake-nav">
            <a href="#related-rakes" id="view-related-rakes" data-toggle="tab">
              RELATED
            </a>
          </li>
        </ul>
      </div>
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="feed">
          <h5>
            <small>
              <% if !@rake.refreshed_at.nil? %>
                updated: <%= time_ago_in_words(@rake.refreshed_at) %> ago
              <% end %>
            </small>
            <span class="pull-right">
            <% if user_signed_in? %>
              <small><%= link_to "Refresh", myrake_path(view: "news", refresh: "yes"), { class: "btn btn-xs btn-primary", id: "ga-my-feed-refresh" } %></small>
            <% else %>
              <small><%= link_to "Sign in to refresh or save", root_path, id: "ga-my-feed-refresh-sign-in" %></small>
            <% end %>
            </span>
          </h5>
          <hr>
          <ul id="feed-list" class="leaflet-list">
            <% @feed_leaflets.each do |l| %>
              <%= render 'shared/leaflet', l: l %>
            <% end %>
          </ul>
        </div>
        <div class="tab-pane" id="channels">
          <br>
          <%= render 'channels' %>
        </div>
        <div class="tab-pane" id="related-rakes">
          <br>
          <%= render 'related_rakes' %>
        </div>
      </div>
    </div>
  </div>
</div>