<div class="jumbotron">
  <%= link_to image_tag("logo_white_239x50.png", class: "landing-page-logo"), root_path %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 mobile-form">
      <h2>Resend unlock instructions</h2>
      <% if !flash.empty? %>
        <div class="alert alert-success alert-dismissable">
          <% flash.each do |key, value| %>
            <%= content_tag :div, value, class: "flash #{key}" %>
          <% end %>
        </div>
      <% end %>
      <%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.email_field :email, autofocus: true %>
        <%= f.submit "Resend unlock instructions" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>