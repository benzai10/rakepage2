<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>My Rakes</h1>
    <div class="panel-group" id="accordion">
      <% @categories.each do |c| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h5 class="panel-title">
              <%= c.desc %>
              <% href_id = "#category_" + c.id.to_s %>
              <span class="pull-right">
                <%= link_to '<i class="fa fa-chevron-down"></i>'.html_safe, href_id,
                            :data => { :toggle => "collapse" },
                            id: "feed-chevron" %>
              </span>
            </h5>
          </div>
          <div id="category_<%= "#{c.id.to_s}" %>" class="panel-collapse collapse">
            <div class="panel-body">
              <div class="row">
              <% master_rake_ids = MasterRake.where("category_id = ?", c.id).pluck(:id) %>
              <% @rakes.where("master_rake_id IN (?)", master_rake_ids).each do |r| %>
                <div class="col-md-6">
                  <div class="thumbnail">
                    <div class="caption">
                      <%= link_to r.name, rake_path(r) %>
                    </div>
                  </div>
                </div>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
