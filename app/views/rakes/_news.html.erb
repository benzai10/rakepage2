<div class="panel panel-default">
  <div class="panel-heading panel-overview">
    <h5 class="panel-title">
      <a data-toggle="collapse" data-parent="#accordion-show" 
         href="#collapse-news">
         Dashboard
      </a>
    </h5>
  </div>
  <div class="panel-collapse collapse <%= 'in' if params[:refresh] != 'yes' %>" id="collapse-news">
    <div class="panel-body">
      <%#= image_tag MasterRake.find(@rake.master_rake_id).image_url, size: "250x140" %>
      <span class="pull-right">
        <%= social_share_button_tag(@rake.name + " Recommendations",
                                    image: MasterRake.find(@rake.master_rake_id).image_url) %>
      </span>
      <% if !current_user.nil? %>
        <%= link_to "<i class='fa fa-sitemap white'></i>".html_safe + " Show Master Rake",
                      master_rake_path(@rake.master_rake_id),
                      class: "btn btn-xs btn-primary" %>
      <% end %>
      <% if user_signed_in? && @rake.user_id == current_user.id %>
        <%= link_to "Delete Rake", rake_path(@rake),
                      :data => { :confirm => "Are you sure?" }, 
                      :method => :delete,
                        class: "btn btn-default btn-xs" %>
      <% end %>
    </div>
  </div>
</div>