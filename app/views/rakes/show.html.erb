<% title @rake.name + " Recommendations" %>
<div class="container-fluid">
  <%= render 'rakes/rakes_menu' %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>
        <%= @rake.name %> Recommendations
      </h1>
      <h5>
        <small>
          <%= link_to "MY RECOMMENDATIONS RAKES", rakes_path %>
          &nbsp;|&nbsp;
          <% if !current_user.nil? %>
            <%= link_to "ALL RECOMMENDATIONS RAKES",
                          master_rakes_path %>
          <% end %>
        </small>
      </h5>
      <div class="panel-group" id="accordion-show">
        <%= render 'news' %>
        <%= render 'feed' %>
        <%= render 'channels' %>
        <%= render 'recommendations' %>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <%= render 'rakes/leaflet_move_modal' %>
  <%= render 'rakes/leaflet_save_modal' %>
  <%= render 'rakes/leaflet_create_modal' %>
<% end %>
<%= render 'rakes/heap_add_modal' %>
<%#= render 'rakes/social_modal' %>
<%= render 'new_rake_modal' %>