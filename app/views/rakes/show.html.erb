<%= render 'rakes/rakes_menu' %>
<div class="row">
  <div class="col-md-3">
    <h5>
      <small>
        <%= link_to "MY RAKES", rakes_path %> | <%= @rake.name.upcase %>
      </small>
    </h5>
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h5 class="panel-title">
            <% href_id = "#feed" %>
            <%= link_to "News", rake_path(heap_type: "News") %>
            <span class="pull-right">
              <%= link_to '<i class="fa fa-chevron-down"></i>'.html_safe, href_id, 
                          :data => { :toggle => "collapse" },
                          id: "feed-chevron" %>
            </span>
          </h5>
        </div>
        <% if params[:heap_type] == "News" %>
          <div id="feed" class="panel-collapse collapse in">
        <% else %>
          <div id="feed" class="panel-collapse collapse">
        <% end %>
            <div class="panel-body">
            </div>
          </div>
      </div>
      <% @heaps.each do |h| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h5 class="panel-title">
              <% leaflet_type_desc = LeafletType.find_by_leaflet_type(h.leaflet_type_id).leaflet_type_desc %>
              <% href_id = "#heap_" + h.leaflet_type_id.to_s %>
              <i class='fa fa-leaf purple'></i>&nbsp;<%= link_to leaflet_type_desc, rake_path(heap_type: h.leaflet_type_id) %>
              <span class="pull-right">
                <%= link_to '<i class="fa fa-chevron-down purple"></i>'.html_safe, href_id, 
                            :data => { :toggle => "collapse" },
                            id: "feed-chevron" %>
              </span>
            </h5>
          </div>
          <% if params[:heap_type].to_i == h.leaflet_type_id %>
            <div id="heap_<%= "#{h.leaflet_type_id}" %>" class="panel-collapse collapse in">
          <% else %>
            <div id="heap_<%= "#{h.leaflet_type_id}" %>" class="panel-collapse collapse">
          <% end %>
            <div class="panel-body">
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-6">
    <h5><small>CONTENT</small></h5>
    <% if params[:heap_type] == "News" %>
      <%= render 'feed' %>
    <% else %>
      <%= render 'heap', locals: { leaflet_type_id: params[:heap_type] } %>
    <% end %>
  </div>
</div>

<%= render 'rakes/leaflet_save_modal' %>
<%= render 'rakes/leaflet_create_modal' %>
<%#= render 'rakes/social_modal' %>