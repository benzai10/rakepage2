<%= render 'rakes/rakes_menu' %>
<%#= render 'rakes/sidebar_show' %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= @rake.name %></h1>
    <% if session[:heap] == "yes" %>
      <%= render 'heap' %>
    <% else %>
      <div class="panel-group" id="accordion">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h5 class="panel-title">
              <% href_id = "#feed" %>
              News
              <span class="pull-right">
                <%= link_to '<i class="fa fa-chevron-down"></i>'.html_safe, href_id, 
                            :data => { :toggle => "collapse" },
                            id: "feed-chevron" %>
              </span>
            </h5>
          </div>
          <div id="feed" class="panel-collapse collapse in">
            <div class="panel-body">
              <%= render 'feed' %>
            </div>
          </div>
        </div>
        <% @heaps.each do |h| %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h5 class="panel-title">
                <% leaflet_type_desc = LeafletType.find_by_leaflet_type(h.leaflet_type_id).leaflet_type_desc %>
                <% href_id = leaflet_type_desc.gsub(/[^A-Za-z]/, '').downcase %>
                <% href_id_link = "#" + href_id %>
                <%= leaflet_type_desc %>
                <span class="pull-right">
                  <%= link_to '<i class="fa fa-chevron-down"></i>'.html_safe, href_id_link, 
                              :data => { :toggle => "collapse" },
                              id: "feed-chevron" %>
                </span>
              </h5>
            </div>
            <div id=<%= "#{href_id}" %> class="panel-collapse collapse">
              <div class="panel-body">
                <%= render 'heap', locals: { leaflet_type_id: h.leaflet_type_id } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'rakes/leaflet_save_modal' %>
<%= render 'rakes/leaflet_create_modal' %>