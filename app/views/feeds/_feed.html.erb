<div class="col-md-4">
  <h3>
    <% if session[:feed_type] == "news" || session[:feed_type].nil? %>
      <span class="feed-type-active">Feed</span>
    <% else %>
      <span class="feed-type-inactive"><%= link_to "Feed", news_rake_path(@rake) %></span>
    <% end %>
    <small>
      <%= link_to "<i class='fa fa-refresh'></i>".html_safe, refresh_feed_channel_path(@rake, feed_type: "news"), id: "refresh-link" %>
    </small>
    |
    <% if session[:feed_type] == "news" || session[:feed_type].nil? %>
      <span class="feed-type-inactive"><%= link_to "Saved", saved_rake_path(@rake) %></span>
    <% else %>
      <span class="feed-type-active">Saved</span>
    <% end %>
    <small>
      <%= link_to "<i class='fa fa-refresh'></i>".html_safe, refresh_feed_channel_path(@rake, feed_type: "saved"), id: "saved-refresh-link" %>
    </small>
  </h3>
  <ul class="leaflet-list">
    <% if session[:rake_class] != MasterRake %>
      <% @rake.update_attribute(:snapshot_count, @rake.snapshot_count + @feed_leaflets.count) %>
    <% end %>
    <% @feed_leaflets.each do |l| %>
      <li class="rake-show-list">
        <a class="pull-left" href="#">
          <% favicon_path = "http://www.google.com/s2/favicons?domain=" + Channel.find(l.channel_id).source %>
          <img class="media-object img-feed-show" src=<%= "#{favicon_path}" %> alt="media image">
        </a>
        <div class="media-body">
          <p class="feed-timestamp">
            <span class="leaflet-title"><%= l.title %></span>
            <span class="pull-right">
              <% if !l.published_at.nil? %>
                <%= time_ago_in_words(l.published_at) %> ago 
              <% else %>
                <%= time_ago_in_words(l.created_at) %> ago 
              <% end %>
              <% if session[:rake_class] == Rake %>
                <% if @rake.user_id == current_user.id %>
                  <span id="<%= 'feed_star_icon_' + l.id.to_s %>">
                    <% if @rake.heap.leaflets.include? l %>
                      <i class="fa fa-star"></i>
                    <% else %>
                      <%= link_to '<i class="fa fa-save"></i>'.html_safe, 
                            add_leaflet_heap_path(@rake.heap, leaflet_id: l.id), 
                            :method => :get, remote: true %>
                    <% end %>
                  </span>
                <% end %>
              <% end %>
            </span>
          </p>
          <p class="feed-body"><%= l.content.html_safe %></p>
          <% if !l.content.downcase.include? "read more" %>
            <p class="leaflet-read-more pull-right"><%= link_to "read more", l.url, class: "external", value: l.id, target: "_blank" %></p>
          <% end %>
          <i class="fa fa-eye"></i> <span class="v_count_<%= l.id %>"><%= l.view_count %></span>
          <i class="fa fa-star"></i> <span class="s_count_<%= l.id %>"><%= l.save_count %></span>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @feed_leaflets %>
</div>
